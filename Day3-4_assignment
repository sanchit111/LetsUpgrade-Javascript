<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Question 1</title>
</head>

<body>
    <div>
        <h1 style="text-align-last: center;"> QuestionImage</h1>
    </div>
    <div class="container">
        <div style="text-align-last: center; height: 100px;">
            <img id="abc" src="img1.jpg" alt="None">
            <div>
                <button onclick="btn_1()">Come back </button>
                <button onclick="btn_2()">Change image </button>
                <button onclick="btn_3()">Change image </button>
            </div>
        </div>
    </div>
    <script>
        function btn_1() {
            document.getElementById("abc").src = "img1.jpg";
        }

        function btn_2() {
            document.getElementById("abc").src = "img5.jpg";
        }

        function btn_3() {
            document.getElementById("abc").src = "img2.jpg";
        }
    </script>
</body>
</html>


//Question 2:
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <div class="container">
        <h2>Question 2</h2>
        <div>
            <input type="text" name="input1">
            </br>
            </br>
            <input type="text" name="input2">
            </br>
            </br>
            <input type="button" onclick="clickk()" value="Copy">
        </div>
    </div>
    <script>
        function clickk() {
            var input_1 = document.getElementsByTagName("input").input1.value;
            document.getElementsByTagName("input").input2.value = input_1;
        }
    </script>
</body>
</html>


